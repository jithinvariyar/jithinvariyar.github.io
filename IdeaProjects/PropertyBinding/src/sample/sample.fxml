<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ProgressIndicator?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Button text="+" GridPane.rowIndex="0" GridPane.columnIndex="0" onAction="#handlePlusClicked"/>
    <Button text="-" GridPane.rowIndex="0" GridPane.columnIndex="1" onAction="#handleMinusClicked"/>
    <ProgressBar fx:id="pb" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <ProgressIndicator fx:id="pi" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Label fx:id="label" text="Nil" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
</GridPane>